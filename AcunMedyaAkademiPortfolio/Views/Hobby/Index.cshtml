@model List<AcunMedyaAkademiPortfolio.Models.TblHobby>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Icon</th>
        <th>Başlık</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.HobbyId</td>
            <td><img src="@item.IconUrl" alt="Image" style="max-width: 100px; max-height: 100px;" /></td>
            <td>@item.Title</td>
            <td><a href="/Hobby/UpdateHobby/@item.HobbyId" class="btn btn-warning"> Güncelle</a></td>
            <td><a href="/Hobby/DeleteHobby/@item.HobbyId" class="btn btn-danger"> Sil</a></td>
        </tr>
    }

</table>

<td><a href="/Hobby/CreateHobby/" class="btn btn-primary">Yeni Referans Ekle</a></td>

