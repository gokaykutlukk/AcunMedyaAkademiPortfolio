@model List<AcunMedyaAkademiPortfolio.Models.TblFeature>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Özellik Adı</th>
        <th>Özellik Başlık</th>-
        <th>Özellik Resmi</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.FeatureId</td>
            <td>@item.FeatureTitle</td>
            <td>@item.FeatureSubtitle</td>
            <td>@item.FeatureImageUr1</td>
            <td><a href="/Feature/UpdateFeature/@item.FeatureId" class="btn btn-warning"> Güncelle</a></td>
            <td><a href="/Feature/DeleteFeature/@item.FeatureId" class="btn btn-danger"> Sil</a></td>
        </tr>
    }

</table>

<td><a href="/Feature/CreateFeature/" class="btn btn-primary">Yeni Özellik Ekle</a></td>

