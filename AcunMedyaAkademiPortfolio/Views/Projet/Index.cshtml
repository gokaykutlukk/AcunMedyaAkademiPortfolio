@model List<AcunMedyaAkademiPortfolio.Models.TblProject>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Proje Adı</th>
        <th>Proje Resmi</th>
        <th>Proje Kategorisi</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ProjectId</td>
            <td>@item.ProjectName</td>
            <td>
                @if (!string.IsNullOrWhiteSpace(item.ProjectImageUrl))
                {
                    <img src="@item.ProjectImageUrl" alt="@item.ProjectName Image" class="img-thumbnail" style="width:120px" />
                }
            </td>
            <td>@item.ProjectCategoryId</td>
            <td><a href="/Projet/UpdateProject/@item.ProjectId" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Projet/DeleteProject/@item.ProjectId" class="btn btn-danger">Sil</a></td>
        </tr>
    }
</table>
<td><a href="/Projet/CreateProject/" class="btn btn-success">Yeni Proje Ekle</a></td>