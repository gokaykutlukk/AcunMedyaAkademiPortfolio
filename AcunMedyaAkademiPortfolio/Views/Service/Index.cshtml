@model List<AcunMedyaAkademiPortfolio.Models.TblService>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>Resim</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ServiceId</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>
                @if (!string.IsNullOrEmpty(item.IconUrl))
                {
                    <img src="@item.IconUrl" alt="@item.Title" style="width: 50px; height: 50px;" />
                }
                else
                {
                    <span>Simge yok</span>
                }
            </td>
            <td><a href="/Service/UpdateService/@item.ServiceId" class="btn btn-warning"> Güncelle</a></td>
            <td><a href="/Service/DeleteService/@item.ServiceId" class="btn btn-danger"> Sil</a></td>
        </tr>
    }

</table>

<td><a href="/Service/CreateService/" class="btn btn-primary">Yeni Servis Ekle</a></td>

